@model Booking_System.Model.Domain.Booking

<div class="container pt-4 mt-0 mt-lg-4">
    <div class="row" style="border: 1px solid #aaa;">
        <div class="col-12 col-lg-7 p-4 2 mt-4 mt-md-0">
            <div class="row p-1 my-1" style="border-radius:20px;">
                <div class="col-6">
                    <h3 class="text-success">Reservation Details</h3>
                </div>
                <div class="text-end col-6">
                    <a class="btn btn-sm btn-outline-danger" style="width:200px;">
                        <i class="bi bi-arrow-left-square"></i> &nbsp; Modify Selection
                    </a>
                </div>
                <hr />
                <div class="row">
                    <div class="col-12 col-md-5">
                        <img src="@Model.RoomType.ImageUrl" style="border-radius:10px;" width="100%" />
                    </div>
                    <div class="col-12 col-md-7">
                        <div class="row p-2">
                            <div class="col-12">
                                <p class="card-title text-warning" style="font-size:xx-large">Description</p>
                                <p class="card-text" style="font-size:large">
                                    @Html.Raw(Model.RoomType.Description)
                                </p>
                            </div>
                        </div>
                        <div class="row col-12">
                            <span class="text-end p-0 pt-3 m-0">
                                <span class="float-right">Max Occupancy : @Model.RoomType.Guests adult </span><br />
                            </span>
                        </div>
                    </div>
                </div>
                <div class="text-end">
                    <h4 class="text-danger font-weight-bold">
                        Booking Total :
                        <span style="border-bottom:1px solid #ff6a00">
                            @Model.TotalCost.ToString("c") : Night
                        </span>
                    </h4>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5 p-4 2 mt-4 mt-md-0" style="border-left:1px solid #aaa;">
            <form asp-action="FinalizeReservationCheck" method="post">
                @* Hidden fields to pass necessary data *@
                <input type="hidden" asp-for="RoomId" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="TotalCost" />
                <input type="hidden" asp-for="CheckInDate" />
                <input type="hidden" asp-for="CheckOutDate" />
                <input type="hidden" asp-for="Nights" />
                <input type="hidden" asp-for="Name" class="form-control" />

                <div class="row pt-1 mb-3" style="border-radius:20px;">
                    <div class="col-12">
                        <h3 class="text-success">Enter Booking Details</h3>
                    </div>
                </div>

                <div class="form-group pt-0">
                    <label asp-for="Name" class="text-warning">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Phone</label>
                    <input asp-for="phoneNumber" class="form-control" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Check in Date</label>
                    <input asp-for="CheckInDate" disabled class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Check Out Date</label>
                    <input asp-for="CheckOutDate" disabled class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">No. of nights</label>
                    <input asp-for="Nights" disabled class="form-control" />
                </div>
                <div class="form-group pt-2 pt-md-4">
                    <button type="submit" class="btn btn-success form-control">Looks Good! Checkout Now</button>
                </div>
            </form>
        </div>
    </div>
</div>
