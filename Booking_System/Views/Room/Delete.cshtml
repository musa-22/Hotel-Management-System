@model Booking_System.Model.Domain.RoomTypes

<div class="container card">

    <h1 class="card-header text-center">Delete Room Details</h1>

    <div class="card-body border-2">

        <form method="post" class="row">

            <input asp-for="Id" hidden />

            <div class="col-10">

       

            <div class="p-3">

                <div class="form-floating py-2 col-12">

                    <input asp-for="Name" disabled class="form-control border" />

                    <label asp-for="Name" class="ms-2">Name</label>

                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>

                <div class="form-floating py-2 col-12">

                    <input asp-for="Price" disabled class="form-control border" />

                    <label asp-for="Price" class="ms-2"></label>

                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>


                <div class="form-floating py-2 col-12">

                    <input asp-for="Guests" disabled class="form-control border" />

                    <label asp-for="Guests" class="ms-2">Guests</label>

                    <span asp-validation-for="Guests" class="text-danger"></span>

                </div>


                <div class="form-floating py-2 col-12">

                    <input type="file" disabled asp-for="ImageUrl" class="form-control border" />


                    <label asp-for="ImageUrl" class="ms-2"></label>



                </div>



                <div class="form-floating py-2 col-12">

                    <input asp-for="Description" disabled class="form-control border" />

                    <label asp-for="Description" class="ms-2">Description</label>

                </div>

                <div class="row pt-2">

                    <div class="col-6 col-md-3">

                        <button type="submit" class="btn btn-danger w-100">Delete Room</button>

                    </div>

                    <div class="col-6 col-md-3">

                        <a asp-controller="Room" asp-action="Index" type="submit" class="btn btn-dark w-100">Cancel </a>

                    </div>


                </div>


            </div>

            </div>

            <div class="col-2">

                <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />

            </div>


        </form>
    </div>

</div>

@*excute frontend validation*@
@section Scripts {

    @{

        <partial name="_ValidationScriptsPartial" />

    }

}