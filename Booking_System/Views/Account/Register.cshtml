@model Booking_System.Model.ViewModels.RegisterVM
<div class=" container p-5">

    <h1 class=" text-center">Create an account </h1>
    <div class="col-md-12 p-5">
        <form method="post" class="row g-3">

            <input asp-for="RedirectUrl" hidden />

            <div class="form-floating mb-3 col-md-6">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-floating">
                    <input asp-for="Email" class="form-control">
                    <label>Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>


            <div class="form-floating mb-3 col-md-6">
                

                <div class="form-floating">
                    <input asp-for="ConfirmEmail" class="form-control">
                    <label>Confirm Email</label>
                    <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating mb-3 col-md-6">
                <div class="form-floating">
                    <input asp-for="Name" class="form-control">
                    <label>Name</label>
                     <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating mb-3 col-md-6">
                <div class="form-floating">
                    <input asp-for="phoneNumber" class="form-control">
                    <label>Phone / Mobile</label>
                     <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating mb-3 col-md-6">
                <div class="form-floating">
                    <input asp-for="Password" class="form-control">
                    <label>Password</label>
                     <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating mb-3 col-md-6">
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" class="form-control">
                    <label>Confirm Password</label>
                     <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

       


            <div class="form-floating col-12 ">
                <select asp-for="Role" asp-items="@Model.RoleList">
                    <option disabled selected>-- Select Room --</option>
                </select>

               </div>

            

            <div class="col-12 ">
                <button type="submit" class="btn btn-dark w-100">Register </a>


            </div>


        </form>
    </div>
</div>



@* excute frontend validation *@
@section Scripts {

    @{

        <partial name="_ValidationScriptsPartial" />

    }

} 